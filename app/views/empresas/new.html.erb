<h1>Formulário de Cadastro de Empresa</h1>

<%= simple_form_for @empresa do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <br>
  <br>
  <%= f.input :nome, :label => "Qual o nome da Empresa?" %>
  <br>
  <%= f.input :descricao, :label => "O que vocês fazem?" %>
  <br>
  <div class="btn-new">
  <%= f.button :submit, "Adicionar", class: "btn btn-outline-warning" %>
  </div>
      
<% end %>
